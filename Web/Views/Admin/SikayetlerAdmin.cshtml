@using Domain.Entities
@model List<Sikayet>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section id="sikayetler-admin-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-7">
                @if (Model.Count != 0)
                {
                    <h2 class="text-center fw-bold mb-3">Şikayetler</h2>
                    <hr />
                    @foreach (var sikayet in Model)
                    {
                        <div class="mesaj d-flex flex-column bg-light mb-3 rounded p-3">
                            <div class="d-flex justify-content-between">
                                <p class="mb-0"><span>Ad ve Soyad: </span>@sikayet.AdSoyad</p>
                                <div><span>Tarih: </span>@sikayet.SikayetTarihi.ToString("dd.MM.yyyy")</div>
                            </div>
                            <hr>
                            <p class="mesaj-body mb-0"><span>Mesaj: </span>@sikayet.SikayetMesaji</p>
                            <hr>
                            <p class="mb-0">Telefon Numarası: <span>@sikayet.Tel</span></p>
                        </div>
                    }
                }
                else
                {
                    <h5 class="pb-0 py-5">Sistemde henüz bir şikayet bulunmamaktadır.</h5>
                }
            </div>
        </div>
    </div>
</section>