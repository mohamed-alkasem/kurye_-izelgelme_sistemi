@using Domain.Entities
@model Sikayet

<section id="sikayetler-kullanici-section" class="bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-11">
                <div class="row gx-0">
                    <div class="col-12 col-lg-6">
                        <div class="iletisim-kisim h-100">
                            <div class="layer px-4 py-5 h-100 d-flex flex-column justify-content-center">
                                <div class="d-flex align-items-center gap-3 mb-3">
                                    <img src="~/imgs/clipboard.svg" alt="img" width="60">
                                    <p class="text-white mb-0">Şikayetiniz kayıt altına alınır ve incelenir.</p>
                                </div>
                                <div class="d-flex align-items-center gap-3 mb-3">
                                    <img src="~/imgs/clock.svg" alt="img" width="60">
                                    <p class="text-white mb-0">En geç 24 saat içinde size geri dönüş yapılır.</p>
                                </div>
                                <div class="d-flex align-items-center gap-3 mb-3">
                                    <img src="~/imgs/shield.svg" alt="img" width="60">
                                    <p class="text-white mb-0">Tüm bilgileriniz gizli tutulur.</p>
                                </div>
                                <div class="d-flex align-items-center gap-3">
                                    <img src="~/imgs/headset.svg" alt="img" width="60">
                                    <p class="text-white mb-0">Destek için bize 7/24 ulaşabilirsiniz.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="form-kisim py-5 px-4 px-md-5 h-100">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form asp-controller="Kullanici" asp-action="SikayetlerKullanici" method="post">
                                <h3 class="mb-3 text-center text-white fw-bold">Şikayetinizi bırakın</h3>
                                <input asp-for="AdSoyad" class="d-block w-100 p-2" type="text" placeholder="*Ad Soyad">
                                <span asp-validation-for="AdSoyad" class="text-danger"></span>
                                <input asp-for="Tel" class="d-block w-100 mt-2 p-2" type="tel" placeholder="*Telefon">
                                <span asp-validation-for="Tel" class="text-danger"></span>
                                <textarea asp-for="SikayetMesaji" class="w-100 mt-2 d-block p-2" placeholder="*Şikayet" rows="3"></textarea>
                                <span asp-validation-for="SikayetMesaji" class="text-danger"></span>
                                <button type="submit" class="btn-gonder btn rounded-0 mt-3 mx-auto d-block px-4">Gönder</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<style>
    .swal-custom-success-button {
        background-color: green !important;
        color: white !important;
        border: none !important;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'success',
                title: 'Başarılı!',
                html: '@Html.Raw(TempData["SuccessMessage"])',
                confirmButtonText: 'Tamam',
                customClass: {
                    confirmButton: 'swal-custom-success-button'
                }
            });
        </script>
    }
}
