@using Web.Models.KullaniciGiris
@model UserRegister
@{
    Layout = "~/Views/Shared/_LayoutGiris.cshtml";
}

<section id="uye-ol-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-7 col-lg-6 col-xl-5 col-xxl-4">
                <div class="card rounded-0 border-0 p-5">
                    <div class="form-content p-0">
                        <h4 class="text-center text-white fw-bold mb-4">Hesap Oluştur</h4>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form asp-controller="Giris" asp-action="KullaniciUye" class="olusturma-form" method="post">
                            <div class="mb-2">
                                <label class="form-label text-white">TC Kimlik Numarası</label>
                                <input asp-for="TC" type="text" class="w-100 p-1 border-0" />
                                <span asp-validation-for="TC" class="text-danger"></span>
                            </div>
                            <div class="mb-2">
                                <label class="form-label text-white">Ad Soyad</label>
                                <input asp-for="AdSoyad" type="text" class="w-100 p-1 border-0" />
                                <span asp-validation-for="AdSoyad" class="text-danger"></span>
                            </div>
                            <label class="form-label text-white">Şifre</label>
                            <div class="mb-3 position-relative">
                                <input asp-for="Sifre" type="password" class="w-100 p-1 border-0">
                                <button type="button" class="btn btn-link position-absolute end-0 top-0 d-flex mt-1 me-2 text-decoration-none">
                                    <i class="fa-solid fa-eye" style="color: #6b6b6b;"></i>
                                </button>
                                <span asp-validation-for="Sifre" class="text-danger"></span>
                            </div>
                            <label class="form-label text-white">Şifre Tekrar</label>
                            <div class="mb-2 position-relative">
                                <input asp-for="SifreTekrar" type="password" class="w-100 p-1 border-0">
                                <button type="button" class="btn btn-link position-absolute end-0 top-0 d-flex mt-1 me-2 text-decoration-none">
                                    <i class="fa-solid fa-eye" style="color: #6b6b6b;"></i>
                                </button>
                                <span asp-validation-for="SifreTekrar" class="text-danger"></span>
                            </div>
                            <button class="btn-olustur btn w-100 my-3 rounded-0" type="submit">Oluştur</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}